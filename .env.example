# === Postgres (general instance for all DBs) ===
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres  # Default initial DB for the container

# === Business DB (news_nlp) ===
DB_HOST=db
DB_PORT=5432
DB_NAME=news_nlp
DB_USER=news_nlp
DB_PASSWORD=news_nlp_password

# === Airflow DB ===
AIRFLOW_DB_NAME=airflow_db
AIRFLOW_DB_USER=airflow
AIRFLOW_DB_PASSWORD=airflow_password

# === MLflow DB ===
MLFLOW_DB_NAME=mlflow_db
MLFLOW_DB_USER=mlflow
MLFLOW_DB_PASSWORD=mlflow_password

# === MLflow tracking (from the app) ===
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=news-topics-ner

# === App (FastAPI) ===
APP_PORT=8000

# === Airflow (minimum necessary) ===
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__BASE_URL=http://localhost:8080

# NOTE: generate a real Fernet key (32 bytes base64)
AIRFLOW__CORE__FERNET_KEY=YOUR_FERNET_KEY_HERE
AIRFLOW__WEBSERVER__SECRET_KEY=some_secret_key_here
